<Window x:Class="Replying_proxy_client.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Replying_proxy_client"
        mc:Ignorable="d"
        Title="Client" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="100"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="100"/>
            <ColumnDefinition Width="1*"/>
        </Grid.ColumnDefinitions>
        <TextBlock Grid.Row="0" Grid.Column="0" Text="ID" VerticalAlignment="Center" HorizontalAlignment="Center" FontSize="60"/>
        <TextBox Grid.Row="0" Grid.Column="1" x:Name="XAML_ID_tb" FontSize="60" VerticalContentAlignment="Center" Text="mingkyme"/>
        <TextBlock Grid.Row="1" Grid.Column="0" Text="PW" VerticalAlignment="Center" HorizontalAlignment="Center" FontSize="60"/>
        <PasswordBox Grid.Row="1" Grid.Column="1" FontSize="60" VerticalContentAlignment="Center" Password="1234" x:Name="XAML_PW_pb"/>
        <Button Grid.Row="2" Grid.ColumnSpan="2" Content="LOGIN" Click="Button_Click"/>
    </Grid>
</Window>
